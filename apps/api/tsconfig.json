{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler", // ðŸ‘ˆ switch from NodeNext
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "@cottonbro/contracts": ["../../packages/contracts/src"],
      "@cottonbro/utils": ["../../packages/utils/src"]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}

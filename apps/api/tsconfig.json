{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@cottonbro/contracts": ["../../packages/contracts/src"],
      "@cottonbro/utils": ["../../packages/utils/src"]
    },
    "types": ["node", "aws-lambda"]
  },
  "include": ["src/**/*"]
}

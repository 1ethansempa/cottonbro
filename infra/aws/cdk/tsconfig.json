{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "."
  },
  "ts-node": { "esm": true, "transpileOnly": true },
  "include": ["bin", "lib", "lambda"]
}
